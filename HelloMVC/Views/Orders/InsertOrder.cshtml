
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }

        .dlg-no-close .ui-dialog-titlebar-close {
            display: none;
        }
    </style>
    <link href="http://code.jquery.com/ui/1.10.4/themes/ui-lightness/jquery-ui.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <script src="http://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $(document).ready(function () {
            insertRow();
            insertRow();
        });
        function insertRow() {
            $('#OrderDetail tr:last')
                .after('<tr>'+
                        '<td><select></select></td>' +
                        '<td><input /></td>' +
                        '<td><input /></td>' +
                        '<td><input /></td>' +
                        '<td><input value="取消" type="button" onclick="deleteRow(this)"></td>' +
                        '</tr>');
        }
        function deleteRow(sender) {
            sender.parentElement.parentElement.remove();
        }
    </script>
</head>
<body>
    新增訂單
    <table>
        <tr>
            <td>客戶名稱</td>
            <td colspan="3">
                <select id="CustomerID">
                    <option>未選取</option>
                    @foreach (var customer in ViewBag.customers)
                    {
                        <option value="@customer.CustomerID">@customer.CompanyName</option>
                    }
                </select>
            </td>
        </tr>
        <tr>
            <td>負責員工名稱</td>
            <td colspan="3">
                <select id="CustomerID">
                    <option>未選取</option>
                    @foreach (var employee in ViewBag.employees)
                    {
                        <option value="@employee.EmployeeID">@employee.FirstName @employee.LastName</option>
                    }
                </select>
            </td>
        </tr>
        <tr>
            <td>訂單日期</td>
            <td>
                <input type="date" />
            </td>
            <td>需要日期</td>
            <td>
                <input type="date" />
            </td>
        </tr>
        <tr>
            <td>出貨日期</td>
            <td colspan="3"><input type="date" id="ShippedDate" /></td>
        </tr>
        <tr>
            <td>出貨公司名稱</td>
            <td colspan="3">
                <select id="CustomerID">
                @foreach (var shipper in ViewBag.shippers)
                {
                    <option value="@shipper.ShipperID">@shipper.CompanyName</option>
                }
                </select>
            </td>
        </tr>
        <tr>
            <td>運費</td>
            <td colspan="3"><input /></td>
        </tr>
        <tr>
            <td>出貨國家</td>
            <td>
                <input />
            </td>
            <td>出貨城市</td>
            <td>
                <input />
            </td>
        </tr>
        <tr>
            <td>出貨地區</td>
            <td>
                <input />
            </td>
            <td>郵遞區號</td>
            <td>
                <input />
            </td>
        </tr>
        <tr>
            <td>出貨地址</td>
            <td>
                <input />
            </td>
            <td>出貨說明</td>
            <td>
                <input />
            </td>
        </tr>
        <tr>
            <td>訂單金額總計</td>
            <td colspan="3">
                <input />
            </td>
        </tr>
        <tr>
            <td></td>
            <td colspan="3">
                <input type="button" value="存檔" id="" />
                <input type="button" value="回前一頁" onclick="javascript:location.href='Index'" />
            </td>
        </tr>       
    </table>
    訂單明細<br>
    <p onclick="insertRow()">+新增訂單</p>
    <table id="OrderDetail">
        <tr>
            <td>商品</td><td>單價</td><td>數量</td><td>小計</td><td></td>
        </tr>
    </table>
</body>
</html>
